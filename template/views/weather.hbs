<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/c096fa5e26.js" crossorigin="anonymous"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Weather</title>
  </head>
  <body>
    {{>header}}
    <main class="container">
        <div class="container d-flex align-items-center flex-column">
          <div class="input-group mb-5 mt-5" style="max-width: 40rem;">
            <input type="text" class="form-control bg-dark text-white" id="cityname" placeholder="Enter City name" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn weather-btn btn-outline-primary" id="submitbtn" type="button" id="button-addon2">Check</button>
          </div>
          <div class="card show-box">
            <div class="card-body d-flex justify-content-around" style="height:20px">
              <h5 id="day"></h5>
              <h5 id="date"></h5>
            </div>
            <hr>
          <div class="card-body">
            <h5 class="generatecity text-center mb-5">Your answer will print here</h5>
            <div class="hide_box">
            <div class="tempBox">
              <h3><span class="temp"></span><sup>o</sup>C</h3>
              <p class="tempstatus"></p>
            </div>
            </div>
          </div>
</div>
        </div>
    </main>
   {{>footer}}
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="js/main.js"></script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
